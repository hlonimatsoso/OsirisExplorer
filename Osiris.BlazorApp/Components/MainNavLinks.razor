@inject NavigationManager NavigationManager

<div class="container">
    <div class="item">
        <MatButton Icon="favorite" OnClick="@OnBreedsClick" Label="Breed"></MatButton>
    </div>
    <div class="item">
        <MatButton Icon="favorite" OnClick="@OnGlossoryClick" Label="Glossory"></MatButton>
    </div>
    <div class="item">
        <MatButton Icon="favorite" OnClick="@OnContactUsClick" Label="Contact Us"></MatButton>
    </div>
    <div class="item">
        <MatButton Icon="favorite" OnClick="@OnAboutClick" Label="About Osiris Explorer"></MatButton>
    </div>
</div>



<style>
    .container {
        display: flex;
        flex-flow: row wrap;
        justify-content: space-between;
        align-content: space-around;

    }

    .item {
        margin-top: 15px;
        margin-bottom: 15px;
    }
    a{

    }
</style>

@code {
    public void OnBreedsClick()
    {
        NavigationManager.NavigateTo("breeds");
    }

    public void OnGlossoryClick()
    {
        NavigationManager.NavigateTo("glossory");
    }

    public void OnContactUsClick()
    {
        NavigationManager.NavigateTo("contact-us");
    }

    public void OnAboutClick()
    {
        NavigationManager.NavigateTo("about-us");
    }
}
