@inject NavigationManager NavigationManager

<div class="container">
    <div class="item">
        <Animate Animation="Animations.SlideDown" Duration="TimeSpan.FromSeconds(2)">
            <MatButton Icon="dashboard" OnClick="@OnBreedsClick" Label="Breed"></MatButton>
        </Animate>
    </div>
    <div class="item">
        <Animate Animation="Animations.SlideDown" Duration="TimeSpan.FromSeconds(2)">
            <MatButton Icon="horizontal_split" OnClick="@OnGlossoryClick" Label="Glossory"></MatButton>
        </Animate>
    </div>
    <div class="item">
        <Animate Animation="Animations.SlideDown" Duration="TimeSpan.FromSeconds(2)">
            <MatButton Icon="feedback" OnClick="@OnContactUsClick" Label="Contact Us"></MatButton>
        </Animate>
    </div>
    <div class="item">
        <Animate Animation="Animations.SlideDown" Duration="TimeSpan.FromSeconds(2)">
            <MatButton Icon="settings_input_component" OnClick="@OnAboutClick" Label="About Osiris Explorer"></MatButton>
        </Animate>
    </div>
</div>



<style>
    .container {
        display: flex;
        flex-flow: row wrap;
        justify-content: space-between;
        align-content: space-around;

    }

    .item {
        margin: 20px;
    }
    a{

    }
</style>

@code {
    public void OnBreedsClick()
    {
        NavigationManager.NavigateTo("breeds");
    }

    public void OnGlossoryClick()
    {
        NavigationManager.NavigateTo("glossory");
    }

    public void OnContactUsClick()
    {
        NavigationManager.NavigateTo("contact-us");
    }

    public void OnAboutClick()
    {
        NavigationManager.NavigateTo("about-us");
    }
}
