@inherits LayoutComponentBase


<MatAppBarContainer>
    <MatAppBar>
        <MatAppBarRow>
            <MatAppBarSection>
                <p>
                    <MatIconButton Icon="menu" @ref="OpenMenuButton" OnClick="OnOpenMenu"></MatIconButton>

                    <MatMenu @ref="Menu">
                        <MatList>
                            <MatListItem>Breeds</MatListItem>
                            <MatListItem>Glossory</MatListItem>
                            <MatListItem>Dog API</MatListItem>
                            <MatListItem>Blazor</MatListItem>
                            <MatListItem>About Me</MatListItem>
                        </MatList>
                    </MatMenu>
                </p>
                <MatAppBarTitle>
                    <div class="app-bar-container">
                        <div class="app-bar-item">Osiris Explorer</div>
                        <div class="spacer"></div>
                        <div class="app-bar-item">Dog API</div>
                    </div>
                </MatAppBarTitle>
            </MatAppBarSection>
            <MatAppBarSection Align="@MatAppBarSectionAlign.End">
                <MatIconButton Icon="favorite"></MatIconButton>
            </MatAppBarSection>
        </MatAppBarRow>
    </MatAppBar>

    <MatAppBarContent>

        <div class="content">
            <MainNavLinks></MainNavLinks>

            @Body
        </div>
        <div class="page_link">xxxx</div> | <div>yyyyyy</div> | <div>zzzz</div>

    </MatAppBarContent>
</MatAppBarContainer>

<style>
    .app-bar-container {
        align-items:center;
        display: flex;
        flex-flow: row nowrap;
        justify-content: space-between;
    }

    .app-bar-item {
        margin-right: 30px;
    }


    .spacer {
        /*width:50%;*/
    }
</style>


@code{
    BaseMatIconButton OpenMenuButton;
    BaseMatMenu Menu;

    public void OnOpenMenu(MouseEventArgs e)
    {
        this.Menu.OpenAsync(OpenMenuButton.Ref);
    }
}
